<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fptparkingproject.uiadmin.notification.SendNotificationActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <EditText
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="13dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:hint="@string/title_sendnotification"
                app:layout_constraintBottom_toTopOf="@+id/textViewImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/textViewImage"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:paddingLeft="20dp"
                android:hint="@string/imgsendnotification"
                app:layout_constraintBottom_toTopOf="@+id/textViewContent"
                app:layout_constraintStart_toStartOf="@+id/textViewTitle"
                app:layout_constraintTop_toBottomOf="@+id/textViewTitle" />

            <EditText
                android:id="@+id/textViewShortContent"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="30dp"
                android:paddingLeft="20dp"
                android:hint="@string/shortcontentsendnotification"
                app:layout_constraintBottom_toTopOf="@+id/textViewContent"
                app:layout_constraintStart_toStartOf="@+id/textViewImage"
                app:layout_constraintTop_toBottomOf="@+id/textViewImage"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"/>

            <EditText
                android:id="@+id/textViewContent"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="@string/contentsendnotification"
                app:layout_constraintStart_toStartOf="@id/buttonSend"
                app:layout_constraintTop_toBottomOf="@+id/textViewShortContent"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"/>
            <Button
                android:id="@+id/buttonSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/button_send"
                android:layout_weight="0"
                android:background="#ed7129"
                android:drawablePadding="10dp"
                android:paddingLeft="@dimen/cardview_default_radius"
                android:paddingTop="@dimen/cardview_default_radius"
                android:paddingRight="@dimen/cardview_default_radius"
                android:paddingBottom="@dimen/cardview_default_radius"
                android:textColor="#ffffff" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>